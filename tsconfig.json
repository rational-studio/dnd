{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2015",
    "module": "ES2015",
    "outDir": "lib",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "stripInternal": true
  },
  "include": ["src"]
}
